# Copia este archivo a .env y completa los valores

# Clave API de OpenRouter (obligatorio)
OPENROUTER_API_KEY=tu_clave_api_de_openrouter

# URL base para OpenRouter (opcional, valor predeterminado proporcionado)
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# Modelo predeterminado a utilizar (opcional, valor predeterminado proporcionado)
DEFAULT_MODEL=deepseek/deepseek-chat:free

# Mensaje de bienvenida personalizado (opcional)
# WELCOME_MESSAGE=¡Hola! Soy AstroBot, tu asistente especializado en química y cálculos de laboratorio.

# Habilitar saludo automático (opcional)
# AUTO_WELCOME=True

# Configuración para producción
DEBUG=False
LOG_LEVEL=INFO

# Clave secreta para seguridad (generada automáticamente si no se proporciona)
# SECRET_KEY=tu_clave_secreta_muy_segura
